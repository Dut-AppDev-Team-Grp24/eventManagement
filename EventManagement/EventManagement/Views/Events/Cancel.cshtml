@{
    ViewData["Title"] = "Cancel";
}
@model Event

<section class="section section-header bg-primary-app text-dark pb-md-10">
    <div class="container">
        <input type="hidden" id="event-id" value="@Model.Id">
        <div class="row">
            <div class="card">
                <div class="card-header">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-12 col-md-6 text-center text-danger">
                            <h1>Are You Sure You want to Cancel This Event?</h1>
                        </div>
                        <div class="col-12 col-md-6 text-center">
                            <img class="d-none d-md-inline-block" src="@Model.ImageUrl" alt="Mobile App Mockup">
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="align-items-center text-center">
                        <h4>@Model.EventName</h4>
                        <div>
                            <p class="lead text-center">
                                @Model.EventDescription
                            </p>
                        </div>
                        <hr />
                        <div class="row align-items-center text-center"
                            <p>
                                Starts At: @Model.StartTime.ToString("dd MMMM yyyy hh:mm tt")
                            </p>
                            <p>
                                Ends At: @Model.EndTime.ToString("dd MMMM yyyy hh:mm tt")
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted align-items-center text-center">
                    <button id="cancel-event-btn" class="btn btn-danger" role="button">
                        Yes, Cancel
                    </button>

                </div>
            </div>

        </div>
    </div>
</section>