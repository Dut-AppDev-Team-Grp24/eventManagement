@{
    ViewData["Title"] = "SignUp";
}
@model SigUpViewModel




<section class="min-vh-100 d-flex align-items-center section-image overlay-soft-dark"
    data-background="~/assets/img/pages/form-image.jpg"
    style="background: url(&quot;~/assets/img/pages/form-image.jpg&quot;);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 d-flex align-items-center justify-content-center">
                <div
                    class="signin-inner my-4 my-lg-0 bg-white shadow-soft border rounded border-gray-300 p-4 p-lg-5 w-100 fmxw-500">
                    <div class="text-center text-md-center mb-4 mt-md-0">
                        <h1 class="mb-0 h3">Create an account</h1>
                    </div>
                    <form asp-action="SignUp" asp-controller="Auth" method="post">
                        <!-- Form -->
                        <div class="form-group mb-4">
                            <label asp-for="Email" for="email">Your Email</label>
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon3"><span
                                        class="fas fa-envelope"></span></span>
                                <input asp-for="Email" type="email" class="form-control" placeholder="example@company.com" id="email"
                                    required="">
                            </div>
                            @Html.ValidationMessageFor(a => a.Email,"",new {@class="text-danger"})
                        </div>
                        <!-- End of Form -->
                        <div class="form-group">
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="Password">Your Password</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon4"><span
                                            class="fas fa-unlock-alt"></span></span>
                                    <input asp-for="Password" type="password" placeholder="Password" class="form-control" id="password"
                                        required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.Password,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-unlock-alt"></span></span>
                                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" class="form-control"
                                        id="password_confirm" required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.ConfirmPassword,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <hr/>
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="Name">Name</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-user-alt"></span></span>
                                    <input asp-for="Name" type="text" placeholder="Name" class="form-control"
                                        id="name" required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.Name,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="Surname">Surname</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-user-alt"></span></span>
                                    <input asp-for="Surname" type="text" placeholder="Surname" class="form-control"
                                        id="surname" required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.Surname,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="PhoneNumber">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-phone-alt"></span></span>
                                    <input asp-for="PhoneNumber" type="tel" placeholder="0712456789" class="form-control"
                                        id="phone" required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.PhoneNumber,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="RoleId">AccountType</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-user-alt"></span></span>
                                    <select asp-for="RoleId" asp-items="@Model.AccountTypes" aria-placeholder="Select Account Type" class="form-control">
                                    </select>
                                </div>
                                @Html.ValidationMessageFor(a => a.RoleId,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <hr/>
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="StreetAddress">Address line 1 (Street)</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-map-alt"></span></span>
                                    <input asp-for="StreetAddress" type="text" placeholder="21 area eve, berea" class="form-control"
                                        id="address_line_1" required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.StreetAddress,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="City">City</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-map-alt"></span></span>
                                    <input asp-for="City" type="text" placeholder="Durban" class="form-control"
                                        id="address_city" required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.City,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="Province">Province</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-map-alt"></span></span>
                                    <input asp-for="Province" type="text" placeholder="KwaZulu-Natal" class="form-control"
                                        id="address_province" required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.Province,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="ZipCode">Zip Code</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-map-alt"></span></span>
                                    <input asp-for="ZipCode" type="number" placeholder="4000" class="form-control"
                                        id="address_zipcode" required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.ZipCode,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                                <label asp-for="Country">Country</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="basic-addon5"><span
                                            class="fas fa-map-alt"></span></span>
                                    <input asp-for="Country" type="text" placeholder="South Africa" class="form-control"
                                        id="address_zipcode" required="">
                                </div>
                                @Html.ValidationMessageFor(a => a.Country,"",new {@class="text-danger"})
                            </div>
                            <!-- End of Form -->
                            <div class="form-check mb-4">
                                <label class="form-check-label" for="terms">
                                    By Clicking the button below, I agree to the <a href="#">terms and conditions</a>
                                </label>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Sign up</button>
                        </div>
                    </form>
                    <div class="mt-3 mb-4 text-center">
                        <span class="fw-normal">or</span>
                    </div>
                    <div class="btn-wrapper my-4 text-center">
                        <a href="#" class="btn btn-icon-only btn-pill btn-outline-gray-300 text-facebook me-2"
                            aria-label="facebook button" title="facebook button">
                            <span aria-hidden="true" class="fab fa-facebook-f"></span>
                        </a>
                        <a href="#" class="btn btn-icon-only btn-pill btn-outline-gray-300 text-twitter me-2"
                            aria-label="twitter button" title="twitter button">
                            <span aria-hidden="true" class="fab fa-twitter"></span>
                        </a>
                        <a href="#" class="btn btn-icon-only btn-pill btn-outline-gray-300 text-facebook"
                            aria-label="github button" title="github button">
                            <span aria-hidden="true" class="fab fa-github"></span>
                        </a>
                    </div>
                    <div class="d-flex justify-content-center align-items-center mt-4">
                        <span class="fw-normal">
                            Already have an account?
                            <a href="./sign-in.html" class="fw-bold text-underline">Login here</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>